<% include ./partials/header %>
<div class="container-fluid">
    <div class="row">

        <div style="width: 70%; margin: 25px auto;">
           <h1 style="text-align: center"><%= product.productname %></h1>
            <div class="thumbnail">
                <img class="img-responsive" src="<%= product.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%=product.price %></h4>
                    <h4><a><%= product.name%></a></h4>
                    <p><%= product.description %></p>
                    <span>Posted on <%= product.postedDate.toDateString() %></span>
                </div>
            </div>
            </div>
        </div>
        <a class="ui orange basic button" href="/products/<%= product._id %>/edit">Edit</a>
        <form id="delete" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
        </form>


    </div>
</div>

<% include ./partials/footer %>